<Window x:Class="Study.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Study"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="300" MinWidth="450" Height="350" Width="500"  
        FontSize="36" Background="AliceBlue" FontFamily="Sitka Heading">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "20" />
            <ColumnDefinition Width = "auto" />
            <ColumnDefinition Width = "20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ты новенький?" Grid.Column="1" Grid.Row="1" 
                   HorizontalAlignment="Center"/>
        <Button x:Name="Registration" Content="Да - зарегистрироваться" 
                Grid.Column="1" Grid.Row="2" Margin="10" Click="Registration_Click"/>
        <Button x:Name="Login" Content="Нет - войти" 
                Grid.Column="1" Grid.Row="3" Margin="10" Click="Login_Click"/>
    </Grid>
</Window>
